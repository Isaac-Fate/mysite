---
import "@fontsource/twinkle-star";
import firaMono from "@fontsource-variable/fira-mono/files/woff2/fira-mono-latin-400-italic.woff2";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="font-fira-code dark" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif, "Fira Code";
  }


---
import type { CollectionEntry } from "astro:content";

import BlogPostCard from "./BlogPostCard.astro";

interface Props {
  blogPosts: CollectionEntry<"posts">[];
}

const { blogPosts } = Astro.props;
---

<div
  class="flex flex-col items-center gap-6 wide-for-grid-2:grid wide-for-grid-2:grid-cols-2"
>
  {blogPosts.map((blogPost) => <BlogPostCard blogPost={blogPost} />)}
</div>

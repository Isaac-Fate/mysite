---
import MainLayout from "@/layouts/MainLayout.astro";
import { PDFViewer } from "@/components/pdf-viewer";

const pdfUrl =
  "https://raw.githubusercontent.com/Isaac-Fate/mathematical-analysis/master/tex/mathematical-analysis.pdf";
---

<MainLayout title="PDF Viewer">
  <div class="container mx-auto p-4">
    <div class="flex flex-col gap-4">
      <h1 class="text-2xl font-bold text-code-class">PDF Viewer</h1>
      <PDFViewer client:only="react" url={pdfUrl} className="max-w-full" />
    </div>
  </div>
</MainLayout>
